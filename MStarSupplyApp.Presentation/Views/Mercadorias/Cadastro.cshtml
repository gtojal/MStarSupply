@model MStarSupplyApp.Presentation.Models.Mercadoria.CadastroViewModel

<div>
    <h5>Cadastro de Mercadorias</h5>
    <p>Para incluir uma mercadoria informe os dados a seguir:</p>
    <hr />

    <div class="mb-2">
        <strong>@TempData["Mensagem"]</strong>
    </div>

    @using (Html.BeginForm())
    {
        <div class="row mb-2">
            <div class="col-md-6">
                <label>Nome da Mercadoria:</label>
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Nome)
                </span>
            </div>
            <div class="col-md-3">
                <label>Número de Registro:</label>
                @Html.TextBoxFor(model => model.NumeroRegistro, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.NumeroRegistro)
                </span>
            </div>
            <div class="col-md-3">
                <label>Fabricante:</label>
                @Html.TextBoxFor(model => model.Fabricante, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Fabricante)
                </span>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-3">
                <label>Tipo:</label>
                @Html.TextBoxFor(model => model.Tipo, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Tipo)
                </span>
            </div>
            <div class="col-md-9">
                <label>Descrição da Mercadoria:</label>
                @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control" })
                <span class="text-danger">
                    @Html.ValidationMessageFor(model => model.Descricao)
                </span>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-12">
               <input type="submit" class="btn btn-success" value="Realizar Cadastro"/>
            </div>
        </div>
    }

</div>